# Compilating and running C files
    runc() {
        local compile_flags=""
        local remove_output=true
        local check_leaks=false
        local exit_status=0;

        while getopts ":fkwlrsg" opt; do
            case $opt in
                f) compile_flags="-Wall -Wextra -Werror";;
                k) remove_output=false;;
                w) compile_flags+=" -w";;
                l) check_leaks=true;;
                s) compile_flags+=" -fsanitize=address";;
                g) compile_flags+=" -g3";;
                \r) rm -rf test.out; return 0;;
                \?) echo "Invalid option: -$OPTARG"; return 1;;
            esac
        done
        shift $((OPTIND-1))
        if [ "$#" -eq 0 ]; then
            echo "Please provide at least one filename with the extension!"
            return 1
        fi
        command="cc $compile_flags"
        for arg in "$@"; do
            command+=" \"$arg\""
        done
        command+=" -o test.out"
        eval "$command"
        if [ "$?" -ne 0 ]; then
            return 1
        fi
        if [ "$check_leaks" = true ]; then
            eval "valgrind ./test.out"
        else
            "./test.out"
        fi
        exit_status=$?;
        if [ "$remove_output" = true ]; then
            rm -f test.out
        fi
        return $exit_status;
    }
